{
  "name": "properties-4-creations-official",
  "version": "3.1.0",
  "description": "Properties 4 Creations - Veteran Housing Platform - Unified Static Architecture with Testing & Accessibility",
  "main": "index.html",
  "scripts": {
    "dev": "npm run audit && npm run start",
    "start": "python3 -m http.server 8080 || python -m http.server 8080 || npx serve . -p 8080",
    "audit": "node scripts/audit-html-consistency.mjs",
    "convert-images": "cd scripts && (convert-images.bat || ./convert-images.sh)",
    "lint": "npx eslint js/",
    "lint:fix": "npx eslint js/ --fix",
    "build": "npm run lint && npm run optimize && echo 'Production build complete - fully optimized codebase'",
    "optimize": "npm run convert-images && npm run audit",
    "deploy": "echo 'Deploy to GitHub Pages or your hosting provider'",
    "postinstall": "npm run audit",
    "test": "npm run test:unit && npm run test:e2e && npm run test:integration",
    "test:unit": "npx jest --coverage --passWithNoTests",
    "test:e2e": "npm run test:e2e:chromium",
    "test:e2e:chromium": "npx playwright test tests/ --project=chromium",
    "test:e2e:firefox": "npx playwright test tests/ --project=firefox",
    "test:e2e:webkit": "npx playwright test tests/ --project=webkit",
    "test:e2e:browser": "npx playwright test tests/comprehensive-e2e.spec.js",
    "test:integration": "npx playwright test tests/form-integration.spec.js",
    "test:responsive": "npx playwright test tests/ --project=chromium --grep '@responsive'",
    "test:accessibility": "npx lighthouse http://localhost:8080/ --output=json --output-path=./lighthouse-report.json",
    "test:performance": "npx lighthouse-batch -f scripts/lighthouse-config.json -o lighthouse-results/",
    "test:security": "npm audit --audit-level=moderate",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:responsive",
    "test:report": "node tests/test-report-generator.js && open test-reports/latest-report.html",
    "lighthouse": "npx lighthouse http://localhost:8080/",
    "lighthouse:all": "npm run lighthouse index.html about.html projects.html contact.html",
    "headed": "npx playwright test --headed",
    "ui": "npx playwright test --ui",
    "debug": "npx playwright test --debug tests/projects.spec.js",
    "report": "npx playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kyletbuzbee/Properties4Creations-Official.git"
  },
  "keywords": [
    "static-site",
    "pwa",
    "veteran-housing",
    "tailwind-css",
    "accessibility",
    "performance"
  ],
  "author": "Properties 4 Creations",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jsdom": "^27.3.0",
    "lighthouse": "^13.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "serve": "^14.2.1",
    "tailwindcss": "^4.1.18"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "homepage": "https://properties4creations.com",
  "dependencies": {
    "g": "^2.0.1",
    "playwright": "^1.57.0"
  }
}
